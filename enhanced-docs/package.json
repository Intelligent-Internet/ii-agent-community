{
  "name": "enhanced-google-docs-clone",
  "version": "1.0.0",
  "description": "A collaborative document editor with AI-powered features built with Next.js, Socket.io, and OpenAI GPT-4o",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0 --turbopack",
    "build": "bun run db:generate && next build",
    "start": "next start -H 0.0.0.0",
    "setup": "./setup.sh",
    "clean": "rm -rf .next node_modules/.cache",
    "clean:all": "rm -rf .next node_modules package-lock.json && npm install",
    "type-check": "bunx tsc --noEmit",
    "lint": "bunx biome lint --write && bunx tsc --noEmit",
    "lint:fix": "bunx biome lint --write",
    "format": "bunx biome format --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:generate": "bunx prisma generate || echo 'Prisma not configured, skipping...'",
    "db:push": "bunx prisma db push || echo 'Prisma not configured'",
    "db:migrate": "bunx prisma migrate dev || echo 'Prisma not configured'",
    "postinstall": "bun run db:generate"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tiptap/extension-collaboration": "^2.24.0",
    "@tiptap/extension-collaboration-cursor": "^2.24.0",
    "@tiptap/extension-color": "^2.24.0",
    "@tiptap/extension-font-family": "^2.24.0",
    "@tiptap/extension-highlight": "^2.24.0",
    "@tiptap/extension-text-align": "^2.24.0",
    "@tiptap/extension-text-style": "^2.24.0",
    "@tiptap/extension-underline": "^2.24.0",
    "@tiptap/react": "^2.24.0",
    "@tiptap/starter-kit": "^2.24.0",
    "@types/supertest": "^6.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "framer-motion": "^12.23.0",
    "jest": "^30.0.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.525.0",
    "next": "^15.3.2",
    "pdf-parse": "^1.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sonner": "^2.0.5",
    "supertest": "^7.1.1",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "vercel": "^44.2.5",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.27"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/eslintrc": "^3.3.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^20.17.50",
    "@types/react": "^18.3.22",
    "@types/react-dom": "^18.3.7",
    "eslint": "^9.27.0",
    "eslint-config-next": "15.1.7",
    "jest-environment-jsdom": "^30.0.2",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "undici": "^7.10.0"
  }
}
